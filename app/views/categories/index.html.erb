<%= render "shared/banner" %>

<div class="title-top">
  <h1>List of categories</h1>
  <%= link_to 'New Category', new_category_path, class: "btn btn-warning" %>
</div>

  <div class="cards mt-3">
    <% @categories.each do |category| %>

        <%= link_to category_path(category) do %>
          <div class="card-category" style="background-image: url(https://images.unsplash.com/photo-1727018742095-14c9a05aa71a?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
            <div>
              <h2><%= category.name %></h2>
              <p><%= category.recipes.count %> recipes</p>
            </div>
          </div>
        <% end %>

    <% end %>
  </div>
</div>
