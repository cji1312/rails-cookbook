<%= render "shared/banner" %>

<div class="title-top">
  <h1>List of categories</h1>
  <%= link_to 'New Category', new_category_path, class: "btn btn-warning" %>
</div>

<div class="cards mt-3">
  <% @categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="card-category" style="background-image: url('<%= cl_image_path category.photo.key, height: 300, width: 400, crop: :fill if category.photo.attached? %>')">
        <h2><%= category.name %></h2>
        <p><%= category.recipes.count %> recipes</p>
      </div>
    <% end %>
  <% end %>

</div>
